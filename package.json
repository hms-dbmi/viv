{
  "name": "@viv/monorepo",
  "scripts": {
    "syncpack": "syncpack fix-mismatches",
    "lint": "eslint packages/*/src/** sites/*/src/**
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "syncpack": {
    "versionGroups": [
      {
        "pinVersion": "~8.6.7",
        "dependencies": [
          "@deck.gl/**"
        ],
        "packages": [
          "**"
        ]
      },
      {
        "pinVersion": "~8.5.3",
        "dependencies": [
          "@luma.gl/**"
        ],
        "packages": [
          "**"
        ]
      },
      {
        "pinVersion": "^16.0.0 || ^17.0.0",
        "dependencies": [
          "react",
          "react-dom"
        ],
        "packages": [
          "**"
        ]
      }
    ]
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "prettier": "^2.6.2",
    "syncpack": "^7.2.1"
  }
}
