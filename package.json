{
  "name": "@viv/monorepo",
  "scripts": {
    "clean": "pnpm -r exec -- rm -rf node_modules",
    "syncpack": "syncpack fix-mismatches",
    "check-format": "prettier --check --ignore-path .gitignore sites/ packages/",
    "lint": "npm run check-format && eslint \"packages/*/src/**/*\" \"sites/*/src/**/*\"",
    "format": "npm run check-format -- --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "syncpack": {
    "versionGroups": [
      {
        "pinVersion": "~8.6.7",
        "dependencies": [
          "@deck.gl/**",
          "deck.gl"
        ],
        "packages": [
          "**"
        ]
      },
      {
        "pinVersion": "~8.5.3",
        "dependencies": [
          "@luma.gl/**"
        ],
        "packages": [
          "**"
        ]
      },
      {
        "pinVersion": "^16.0.0 || ^17.0.0",
        "dependencies": [
          "react",
          "react-dom"
        ],
        "packages": [
          "packages/**"
        ]
      },
      {
        "pinVersion": "workspace:*",
        "dependencies": [
          "@viv/**"
        ],
        "packages": [
          "**"
        ]
      }
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.16.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "prettier": "^2.6.2",
    "syncpack": "^7.2.1",
    "typescript": "^4.6.4"
  }
}
