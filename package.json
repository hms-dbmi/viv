{
  "name": "@viv/monorepo",
  "scripts": {
    "dev": "pnpm -r dev --filter=avivator",
    "clean": "pnpm -r exec -- rm -rf node_modules",
    "syncpack": "syncpack fix-mismatches",
    "check-format": "prettier --check --ignore-path .gitignore sites/avivator packages/",
    "lint": "npm run check-format && eslint \"packages/*/src/**/*\" \"sites/*/src/**/*\"",
    "format": "npm run check-format -- --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "buffer": "^6.0.3",
    "esbuild": "^0.14.42",
    "esbuild-plugin-glslify": "^1.0.1",
    "eslint": "^8.16.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "esno": "^0.16.3",
    "path-browserify": "^1.0.1",
    "prettier": "^2.6.2",
    "stream-browserify": "^3.0.0",
    "syncpack": "^7.2.1",
    "tap-spec": "^5.0.0",
    "tape": "^5.5.3",
    "tape-catch": "^1.0.6",
    "tape-run": "^10.0.0",
    "typescript": "^4.6.4",
    "unbuild": "^0.7.4"
  },
  "devDependenciesMeta": {
    "buffer": "Required to bundle `tape` for `tape-run`. See tsconfig.json 'paths' for esbuild resolution.",
    "path-browserify": "Required to bundle `tape` for `tape-run`. See tsconfig.json 'paths' for esbuild resolution.",
    "stream-browserify": "Required to bundle `tape` for `tape-run`. See tsconfig.json 'paths' for esbuild resolution.",
    "eslint-plugin-glslify": "Bundles glslify modules used in .glsl files. Has too strict esbuild version requirement, overriden below.",
    "esno": "Node.js runner. Used to run loader tests with"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "esbuild": "*"
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "syncpack": {
    "versionGroups": [
      {
        "pinVersion": "8.6.7",
        "dependencies": [
          "@deck.gl/**",
          "deck.gl"
        ],
        "packages": [
          "**"
        ]
      },
      {
        "pinVersion": "8.5.3",
        "dependencies": [
          "@luma.gl/**"
        ],
        "packages": [
          "**"
        ]
      },
      {
        "pinVersion": "^16.0.0 || ^17.0.0",
        "dependencies": [
          "react",
          "react-dom"
        ],
        "packages": [
          "**"
        ]
      },
      {
        "pinVersion": "workspace:*",
        "dependencies": [
          "@viv/**"
        ],
        "packages": [
          "**"
        ]
      }
    ]
  }
}
