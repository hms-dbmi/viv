{
  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "outDir": "dist",
    "rootDir": "src/",
    "declarationDir": "dist/",
    "declaration": true
  }
}